<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" ><mapper namespace="com.yyan.dao.LeaveBillDao">    <!--插入一条数据-->    <insert id="insertLeaveBill" parameterType="com.yyan.pojo.LeaveBill">        <!-- mysql插入数据后，获取id -->        insert into leaveBill(id, title,content,days,leaveDate,state,userId,createTime,updateTime) values        (uuid(), #{title},#{content},${days},#{leaveDate},#{state},#{userId},now(), now())    </insert>    <!--查询条件-->    <sql id="selectListLeaveBillCondition">        <if test="userId != null">            and userId= #{userId}        </if>        <if test="title != null">            and title=#{title}        </if>    </sql>    <!--查询请假单-->    <select id="selectListLeaveBill" resultType="java.util.HashMap">        SELECT *        FROM leaveBill where 1=1        <include refid="selectListLeaveBillCondition"/>        limit ${ pageNumber * pageSize},${(pageNumber+1)*pageSize}    </select>    <!--查询数量-->    <select id="countListLeaveBill" resultType="java.lang.Integer">        select count(id) from leaveBill WHERE 1=1        <include refid="selectListLeaveBillCondition"/>    </select>    <!--修改-->    <update id="updateLeaveBill" parameterType="com.yyan.pojo.LeaveBill">        update leaveBill set         title=#{title},         content=#{content},         days=#{days},         leaveDate=#{leaveDate},         state=#{state},         userId=#{userId},         updateTime=now()        where 1=1 and id=#{id};    </update>    <!--删除-->    <delete id="deleteLeaveBill">        delete from leaveBill where id=#{id};    </delete></mapper>