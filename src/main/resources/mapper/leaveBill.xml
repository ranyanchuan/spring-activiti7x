<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" ><mapper namespace="com.yyan.dao.LeaveBillDao">    <!--插入一条数据-->    <insert id="insertLeaveBill" parameterType="com.yyan.pojo.LeaveBill">        <!-- mysql插入数据后，获取id -->        insert into leaveBill(id, title,content,days,leaveDate,state,userId,createTime,updateTime) values        (uuid(), #{title},#{content},${days},#{leaveDate},#{state},#{userId},now(), now())    </insert>    <!--查询条件-->    <sql id="selectListLeaveBillCondition">        <if test="userId != null">            and userId= #{userId}        </if>        <if test="title != null">            and title=#{title}        </if>    </sql>    <!--查询请假单-->    <select id="selectListLeaveBill"   resultType="java.util.HashMap">        SELECT *        FROM leaveBill where 1=1        <include refid="selectListLeaveBillCondition"/>        limit ${ pageNumber * pageSize},${(pageNumber+1)*pageSize}    </select>    <!--查询数量-->    <select id="countListLeaveBill" resultType="java.lang.Integer">        select count(id) from leaveBill WHERE 1=1        <include refid="selectListLeaveBillCondition"/>    </select>    <!--&lt;!&ndash;查询最后一个区块&ndash;&gt;-->    <!--<select id="selectEndBlock" resultType="com.yyan.pojo.Block">-->        <!--SELECT * FROM block-->        <!--WHERE 1=1-->        <!--order by timeStamp DESC limit 1-->    <!--</select>-->    <!--&lt;!&ndash;修改用户密码&ndash;&gt;-->    <!--<update id="updateUser" parameterType="com.yyan.pojo.User">-->        <!--update user-->        <!--<set>-->            <!--<if test="item.email!=null">email=#{item.email},</if>-->            <!--updateTime=now()-->        <!--</set>-->        <!--where 1=1 and id = #{item.id}-->    <!--</update>-->    <!--&lt;!&ndash;用户登录&ndash;&gt;-->    <!--<select id="login" parameterType="java.util.HashMap" resultType="com.yyan.pojo.User">-->        <!